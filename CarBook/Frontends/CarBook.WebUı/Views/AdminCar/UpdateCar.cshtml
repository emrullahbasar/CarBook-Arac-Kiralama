@model UpdateCarDto
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card-body">

                        <h4 class="card-title">Araç Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Araç ile ilgili bilgileri eksiksiz doldurmanız önemlidir. Veri girişinden sonra
                            kaydet butonuna tıklayarak güncelleme işlemi tamamlayabilirsiniz
                        </p>
                        <form method="post">
                            <input type ="hidden" asp-for="CarID"/>
                            <div class="form-group">
                                <label for="exampleInputBrand">Marka</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                                <small id="BrandHelp" class="form-text text-muted">Marka seçiminizi yapınız.</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model seçimi yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImageUrl">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputCoverImageUrl" asp-for="CoverImageUrl" placeholder="Aracın Kapak fotoğrafı linkini giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Kilometre</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Aracın kilometresini giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Vites</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Aracın vites türünü giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Koltuklar</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Aracın koltuk sayısını giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Bagaj </label>
                                <input type="text" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Aracın bagaj kapasitesini litre bazlı giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel">Yakıt </label>
                                <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Aracın yakıt türünü giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBigImageUrl">Büyük Fotoğraf </label>
                                <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Aracın büyük fotoğrafının linkini giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>

                    </div>


                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->
    </div>
    <!-- end col -->
</div>
<!-- end page title -->
