@model CreateRezervationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Araç Rezervasyon Formu</h3>
        <br/>
            <input type="hidden" asp-for="CarID" value="@ViewBag.v3" class="form-control" />
        <div class="form-group">
            <label>Adınızı Giriniz</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Soy Adınızı Giriniz</label>
            <input type="text" asp-for="SurName" class="form-control">
        </div>
        <div class="form-group">
            <label>Mail Adresinizi Giriniz</label>
            <input type="text" asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label>Telefon Numaranızı Giriniz</label>
            <input type="text" asp-for="Phone" class="form-control">
        </div>
        <div class="form-group">
            <label>Teslim Almak İstediğiniz Yer</label>
             @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Teslim Etmek İstediğiniz Yer</label>
             @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="text" asp-for="Age" class="form-control">
        </div>
         <div class="form-group">
            <label>Ehliyet Yılınız</label>
            <input type="text" asp-for="DriverLicanceYear" class="form-control">
        </div>
        <div class="form-group">
            <label>Mesajınız(zorunlu değil)</label>
            <textarea  id="" cols="30" rows="7" asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
