@model List<ResultAllBlogWithAuthorsDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Blog Listesi ve İşlemleri</h4>
                            <p class="card-subtitle mb-4">
                                Bloglarla ilgili silme, güncelleme ve blog listesi erişimlerini görebilirsiniz. Yeni blog ekleme işlemi
                                admin tarafından yapılmamaktadır. Eğer blog ekleme işlemini yapmak isterseniz sisteme yazar olarak giriş
                                yapmanız gerekmektedir. Her yazar sadece kendi bloglarını düzenleyebilir. Bunun için sisteme Login/WriterLogin
                                sayfası üzerinden giriş yapabilirsiniz.
                            </p>
                            <div class="table-responsive">

                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Başlık</th>
                                            <th>Yazar</th>
                                            <th>Kategori</th>
                                            <th>Tarih</th>
                                            <th>Kaldır</th>
                                            <th>Blogu aç</th>
                                            <th>Yorumlar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            @foreach (var item in Model)
                                            {
                                                count++;
                                                <tr>
                                                    <td>@count</td>
                                                    <td>@item.Title</td>
                                                    <td>@item.AuthorName</td>
                                                    <td>@item.CategoryID</td>
                                                    <td>@item.CreatedTime</td>
                                                    <td><a href="/Admin/AdminBlog/RemoveBlog/@item.BlogID" class="btn btn-outline-danger">Kaldır</a></td>
                                                    <td><a href="/Blog/BlogDetail/@item.BlogID" class="btn btn-outline-dark">Blogu aç</a></td>
                                                    <td><a href="/Admin/AdminComment/Index/@item.BlogID" class="btn btn-outline-success">Yorumlar</a></td>
                                                </tr>

                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">Henüz bir Blog Girişi Yapılmamıştır</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
