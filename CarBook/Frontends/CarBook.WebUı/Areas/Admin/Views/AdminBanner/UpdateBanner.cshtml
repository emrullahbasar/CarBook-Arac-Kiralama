@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın banner alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tasarımda bozulma olmaması adına
                            yeni bir banner girişi yaptınktan sonra önceki banner alanını siliniz. 1 banner alanı kalmalıdır .Aksi halde tema bütünlüğü bozulacaktır
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerID"/>
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDescriptio">Video Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescriptio" asp-for="VideoDescription" placeholder="Video Açıklaması Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoURL">Video Linki</label>
                                <input type="text" class="form-control" id="exampleInputVideoURL" asp-for="VideoUrl" placeholder="Video Linki Giriniz">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Bannerı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
